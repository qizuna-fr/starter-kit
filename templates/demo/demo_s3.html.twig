

{% block content %}

    <div class="p-4">

        <h3 class="text-brandSecondary-500 text-3xl mb-8">
            Fichiers du serveur S3
        </h3>


        <ul role="list" class="divide-y divide-gray-100">

            {% for file in files %}
            <li class="flex items-center justify-between gap-x-6 py-2">
                <div class="flex min-w-0 gap-x-4">

                    <span class="block w-8 h-8 bg-brandSecondary-500 rounded-full text-white text-center text-xs uppercase grid leading-6 flex justify-center items-center">
                        <span>{{ file.extension }}</span>
                    </span>

                    <div class="min-w-0 flex-auto">
                        <p class="text-sm font-base leading-6 text-gray-900">{{ file.filename }}</p>
                    </div>
                </div>
                <a href="{{ file.url }}" target="_blank" class="rounded-full bg-white px-2.5 py-1 text-xs font-base text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">Download</a>
            </li>
            {% endfor %}

        </ul>
