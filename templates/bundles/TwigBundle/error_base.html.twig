<div class="flex h-full" {% if block("stimulus_controllers") %} {% block stimulus_controllers %}{% endblock %} {% endif %} >


    <!-- Content area -->
    <div class="flex flex-1 flex-col overflow-hidden">


        <!-- Main content -->
        <!-- Main content -->
        <div class="flex flex-1 items-stretch overflow-hidden">
            <main class="flex-1 overflow-y-auto">
                <!-- Primary column -->

                <section aria-labelledby="primary-heading" class="flex h-full min-w-0 flex-1 flex-col lg:order-last">

                    <div>

                        <div class="mx-auto">

                            <div>
                                <!-- Header -->
                                <div class="relative bg-brandPrincipal-100 pb-32 ">
                                    <div class="absolute inset-0">
                                        <img class="h-full w-full object-cover blur"
                                             src="https://images.unsplash.com/photo-1525130413817-d45c1d127c42?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1920&q=60&&sat=-100"
                                             alt="">
                                        <div class="absolute inset-0 bg-brandThird-200 mix-blend-multiply"
                                             aria-hidden="true"></div>
                                    </div>
                                    <div class="relative mx-auto max-w-7xl py-24 px-6 sm:py-32 lg:px-8">
                                        <h1 class="text-4xl font-extralight tracking-tight text-white md:text-5xl lg:text-6xl">{{ title }}</h1>
                                        <p class="mt-6 max-w-3xl text-xl text-gray-300">{{ subtitle }}
                                        </p>
                                    </div>
                                </div>

                                <!-- Overlapping cards -->

                                <section class="relative z-auto mx-auto  -mt-16 max-w-7xl px-6 pb-32 lg:px-8"
                                         aria-labelledby="contact-heading">
                                    <div class="grid grid-cols-1 gap-y-20 lg:grid-cols-1 lg:gap-y-0 lg:gap-x-8">
                                        <div class="flex flex-col rounded-2xl bg-white shadow-xl">
                                            <div class="relative flex-1 px-6 pt-16 pb-8 md:px-8">
                                                <div class="absolute top-0 inline-block -translate-y-1/2 transform rounded-xl bg-brandPrincipal-600 p-5 shadow-lg">
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                                         viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                                         class="h-6 w-6 text-white">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"/>
                                                    </svg>
                                                </div>
                                                <h3 class="text-2xl font-medium text-gray-600 tracking-tighter">
                                                    Erreur {{ status_code }} </h3>
                                                <p class="mt-4 text-base text-gray-500">{{ message }}</p>

                                                {% if withStack %}

                                                <h3 class="text-2xl font-medium text-gray-600 tracking-tighter mt-16">
                                                                Pile d'appels
                                                </h3>
                                                    <div class="mt-8 ">
                                                        {% for index, trace in exception.trace %}
                                                            <div class="flex flex-row p-4">
                                                                <span class="mr-4">{{ index }}.</span>
                                                                <code class="ml-4">{{ trace.file }}:{{ trace.line }}</code>

                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="rounded-bl-2xl rounded-br-2xl bg-gray-50 p-6 md:px-8">
                                                {% set referer = app.request.server.get('http-referer')|default('/') %}
                                                <a href="{{ referer }}"
                                                   class="text-base font-medium text-brandThird-300 hover:text-brandSecondary-300">Retourner
                                                    à la page précédente <span aria-hidden="true"> &rarr;</span></a>
                                            </div>
                                        </div>

                                    </div>
                                </section>


                            </div>


                            {#                            {% block header_actions %}{% endblock %} #}
                            <!-- /End replace -->
                        </div>
                    </div>

                </section>
            </main>

        </div>
    </div>


    <div {{ stimulus_target('modal' , 'container') }}></div>

</div>


</body>
</html>


