{% extends 'splitview_base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="splitscreen__alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="text-center">
        <p class="mt-3 text-gray-500 dark:text-gray-300">Entrez votre adresse email et vous recevrez un email permettant de créer un nouveau mot de passe.</p>
    </div>

    <div class="mt-8">

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <button class="splitscreen__button mt-6">Envoyer</button>
    {{ form_end(requestForm) }}

    </div>
{% endblock %}
