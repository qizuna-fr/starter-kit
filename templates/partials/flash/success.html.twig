<div aria-live="assertive"
        {{ stimulus_controller('notification') }}
     class="pointer-events-none fixed inset-0 inset-y-16 flex items-end px-4 py-6 sm:items-start sm:p-6"
     data-transition-enter="transform ease-out duration-300 transition"
     data-transition-enter-start="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
     data-transition-enter-end="translate-y-0 opacity-100 sm:translate-x-0"
     data-transition-leave="transition ease-in duration-300"
     data-transition-leave-start="opacity-100"
     data-transition-leave-end="opacity-0">
    <div class="flex w-full flex-col items-center space-y-4 sm:items-end" >

        <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
            <div class="p-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                             fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd"
                                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3 w-0 flex-1 pt-0.5">
                        <p class="text-sm font-medium text-gray-900">Parfait !</p>
                        <p class="mt-1 text-sm text-gray-500"> {{ message }} </p>
                    </div>
                    <div class="ml-4 flex flex-shrink-0">
                        <button type="button"
                                {{ stimulus_action('notification' , 'close') }}
                                class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            <span class="sr-only">Fermer</span>
                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
