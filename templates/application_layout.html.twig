<div class="flex h-full" {{ stimulus_controller('mobilemenu') }}>

    {% include 'partials/menu-mobile.html.twig' %}
    {% include 'partials/menu-large.html.twig' %}

    <!-- Content area -->
    <div class="flex flex-1 flex-col overflow-hidden">
        <header class="w-full">
            <div class="relative z-10 flex h-16 flex-shrink-0 border-b border-gray-200 bg-white shadow-sm">
                <button type="button"
                        class="border-r border-gray-200 px-4 text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500 md:hidden" {{ stimulus_action('mobilemenu' , 'open') }}>
                    <span class="sr-only">Ouvrir le menu</span>
                    <!-- Heroicon name: outline/bars-3-bottom-left -->
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                         stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12"/>
                    </svg>
                </button>
                <div class="flex flex-1 justify-between px-4 sm:px-6">

                    {% include 'partials/searchbar.html.twig' %}

                    <div class="ml-2 flex items-center space-x-4 sm:ml-6 sm:space-x-6">
                        <!-- Profile dropdown -->
                        {% include 'partials/usermenu.html.twig' %}
                        {#                        {% include 'partials/actions.html.twig' %}#}
                    </div>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <!-- Main content -->
        <div class="flex flex-1 items-stretch overflow-hidden">


            <main class="flex-1 overflow-y-auto">
                <!-- Primary column -->

                <section aria-labelledby="primary-heading" class="flex h-full min-w-0 flex-1 flex-col lg:order-last">

                    <div>
                        <div class="mx-auto">


                            <!-- Replace with your content -->
                            <div class="mt-4">
                                <div class="relative bg-brandPrincipal-500 pb-48 -mt-8 z-auto py-24">

                                    <div class="absolute inset-0">

                                        <img class="h-full w-full object-cover blur-sm"
                                             src="https://images.unsplash.com/photo-1606765962248-7ff407b51667?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1920&q=60&&sat=-100"
                                             alt="">
                                        <div class="absolute inset-0 bg-brandPrincipal-500 mix-blend-multiply "
                                             aria-hidden="true">

                                            {% if app.request.requestUri == "/" %}
                                                <div class="relative text-5xl tracking-tighter top-12 left-24 font-bold  text-white">
                                                    {{ app.user.username }}
                                                </div>
                                            {% endif %}

                                        </div>
                                    </div>
                                </div>
                            </div>


                            {% if block('breadcrumb') %}
                                <div class="m-4 p-4">
                                    {% block breadcrumb %}{% endblock %}
                                </div>
                            {% endif %}

                            {% block body %}{% endblock %}


                            {#                            {% block header_actions %}{% endblock %} #}
                            <!-- /End replace -->
                        </div>
                    </div>

                </section>
            </main>

        </div>
    </div>
</div>

{% for message in app.flashes('success') %}
    {% include 'partials/flash/success.html.twig' with {color:"green"} %}
{% endfor %}


{% for message in app.flashes('warning') %}
    {% include 'partials/flash/warning.html.twig' with {color:"orange"} %}
{% endfor %}

{% for message in app.flashes('error') %}
    {% include 'partials/flash/error.html.twig' with {color:"red"} %}
{% endfor %}

{% for message in app.flashes('info') %}
    {% include 'partials/flash/info.html.twig' with {color:"blue"} %}
{% endfor %}


</body>
</html>
